extends layouts/main.pug
include mixins/videoBlock

block content 
    .user-profile
        .user-profile__header
            img.u-avatar(src=`/${user.avatarUrl}`)
            h4.profile___username=user.name
        .uploaded-videos
            each item in user.videos
                +videoBlock({
                    id:item.id,
                    title:item.title,
                    views:item.views,
                    videoFile:item.fileUrl
                })
